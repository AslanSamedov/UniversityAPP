<Window x:Class="Ejournall.Views.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejournall.Views.Windows"
        mc:Ignorable="d"
        Title="ErrorWindow"  Height="200" Width="400"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF053A3F" Offset="0.01"/>
            <GradientStop Color="#FF09794D" Offset="1"/>
            <GradientStop Color="#FF0A6473" Offset="0.505"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock FontSize="20" TextWrapping="Wrap" Foreground="White" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Name="txtErrorMessage"/>
    </Grid>
</Window>
