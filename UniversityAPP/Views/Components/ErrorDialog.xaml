<UserControl x:Class="Ejournall.Views.Components.ErrorDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ejournall.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderThickness="3" >
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF797979"/>
                <GradientStop Color="#FF2C864F" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <TextBlock  Height="25" Foreground="{Binding Path=TextColor}" FontSize="22" Background="#FF1D2860" TextAlignment="Center" FontWeight="Medium" Text="{Binding Path = Message}"/>
    </Border>
</UserControl>
