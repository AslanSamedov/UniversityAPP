<UserControl x:Class="Ejournall.Views.Components.ExcelButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign ="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ejournall.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    
    <Grid>
        <Button Width="80" Height="30" Command="{Binding Path = ExcelCommand}" BorderThickness="0,0,1,1" Margin="0,0,10,5" materialDesign:ButtonAssist.CornerRadius="20">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB1D44F" Offset="1"/>
                    <GradientStop Color="#FF22D49B"/>
                </LinearGradientBrush>
            </Button.Background>
          <TextBlock Text="Excel" FontSize="15"/>
        </Button>
    </Grid>
</UserControl>
